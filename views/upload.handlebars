<html>
<head>
	<script src="https://kit.fontawesome.com/5475b02c18.js" crossorigin="anonymous"></script>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="css/bootstrap.min.css" rel="stylesheet">
	<link href="css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="css/main.css" rel="stylesheet">
	<link href="css/upload.css" rel="stylesheet">
	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/main.js"></script>
	<script src="/js/upload.js"></script>
	<title>Dconstruct</title>
</head>
<body>
<div>
	<nav class="navbar fixed-top topNav navbar-light bg-light">
		<a class="dconstruct"  href="#" >
			<img src="source/D.png" id="s-logo" width="30" height="30"/>
			<a href="#"><i class="profile fas fa-user fa-lg"></i></a>
			<i class="profile2 fas fa-star fa-lg"> 3</i>
		</a>
	</nav>
</div>

	<form id="newPost" role="form" method="get" action="/uploadPost">
	<span class = "upload-wrapper">
	    <input type= "file" class = "file-upload" accept = "image/*" id = "inpImg" onchange = "inputImg(this);" name="imageURL">
	    <input type="button" id = "removeButton" onclick = "deleteImg(this);">
	    <a onclick = "removeFile()" id = "dltButton"><i class="fas fa-times-circle rmv_initial" style="color: red"></i></a>
	    <a onclick = "inputFile()" id = "imgButton"><img class = "imgPreview" id ="preview" src = "source/images/default.jpg" height="200" width="200"></a>
	</span>
	  <div class="form-group text-center">
	    <label for="textResponse1">Input your Question Here:</label>
	    <input class="form-control" id="textResponse1" rows="2" name="question"></input>
	    <br>
	  <button type="submit" class="btn btn-primary" >
	  	<a style="color:white">Upload Post</a></button>
	  </div>
	</form>
		

	{{#each userPosts}}
		<div id={{no}}>
			<img class="upload-wrapper" src={{image}}>
			<p>{{question}}</p>
		</div>
	{{/each}}

	{{!-- keep all the data above the bottom nabvar --}}
	<div class="bottomMargin">

	</div>
	<div class="bottomNav" style="height: 5rem;">
		<a href="/main"><i class="fas fa-lg fa-home"></i></a>
		<a href="/history"><i class="fas fa-lg fa-history"></i></a>
		<a href="/upload"><i class="fas fa-lg fa-plus-square"></i></a>
	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
</body>
</html>
