	    <label for="textResponse1">{{question}}</label>
	    <input class="form-control" id="textResponse1" rows="2" name="answer1"></input>
	  </div>
	  <div class="form-group">
	    <label for="textResponse2">{{prompt}}</label>
	    <input class="form-control" id="textResponse2" rows="2" name="answer2"></input>
	  </div>
	  {{!-- <button type="button" class="btn btn-primary"> --}}
	  	{{!-- <a style="color:white" href="/main">Submit</a></button> --}}
		<input type="submit" id="submitBtn" class="btn btn-default" value="Submit feedback"></input>
	</form>

  <div class="bottomNav" style="height: 5rem;">
    <a href="/main"><i class="fas fa-lg fa-home"></i></a>
    <a href="/history"><i class="fas fa-lg fa-history"></i></a>
    <a href="/upload"><i class="fas fa-lg fa-plus-square"></i></a>
  </div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="../js/bootstrap.min.js"></script>
